<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Shop:</h3>

    <form class="form new-shop-form">
      <div class="form-group">
        <label for="shop-name">Shop name:</label>
        <input class="form-input" type="text" id="shop-name" name="shop-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if shops}}
  <div class="col-md-6 shop-list">
    <h3>My Shops:</h3>

    {{#each shops as |shop|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/shop/{{shop.id}}">{{shop.name}}</a></h4>
        <p>{{shop.description}}</p>
        <!--- shop.announcements but use announcement button and onclick/alert to show announcement --->
        <!-- email button connected to nodemailer that mass emails buyers -->
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{shop.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>